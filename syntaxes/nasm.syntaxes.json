{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NASM",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#comments" },
		{ "include": "#numbers" },
		{ "include": "#registers" },
		{ "include": "#conditions" },
		{ "include": "#labels" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.nasm",
					"match": "\\b(mov|lea|push|pop|call|ret|jmp|je|jne|jg|jl|jge|jle|ja|jb|jz|jnz|jo|jno|js|jns|jc|jnc|add|sub|mul|imul|div|idiv|inc|dec|neg|cmp|test|adc|sbb|and|or|xor|not|shl|shr|sal|sar|rol|ror|rcl|rcr|clc|stc|cmc|cli|sti|cld|std|int|iret|syscall|sysret|nop|hlt|pause)\\b"
				},
				{
					"name": "keyword.other.directive.asm",
					"match": "\\b(section|global|extern|equ|db|dw|dd|dq|resb|resw|resd|resq|times|align|org|segment|end|byte|word|dword|qword|tbyte|proc|endp|if|else|endif|repeat|until|while|align|alignb|alignw|alignd|alignq|db|dw|dd|dq|resb|resw|resd|resq|equ|macro|endm|include|incbin|assert)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nasm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\('|\"|`|\\\\|\\?|[abtnvfre]|[0-7]{3}|x[\\da-fA-F]{2}|u[\\da-fA-F]{4}|U[\\da-fA-F]{8})"
				}
			]
		},
		"comments": {
			"name": "comment.line.nasm",
			"begin": ";",
			"end": "\n"
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex.nasm",
					"match": "(?i)\\b(?:0x[0-9a-f_]+|[0-9a-f_]+h|&[0-9a-f_]+|\\$[0-9a-f_]+)\\b"
				},
				{
					"name": "constant.numeric.bin.nasm",
					"match": "\\b(?:0b[01_]+|[01_]+b)\\b"
				},
				{
					"name": "constant.numeric.oct.nasm",
					"match": "\\b(?:0o[0-7_]+|[0-7_]+o|0[0-7_]+)\\b"
				},
				{
					"name": "constant.numeric.dec.nasm",
					"match": "\\b-?(?:[1-9][0-9_]*|0)\\b"
				}
			]
		},
		"registers": {
			"patterns": [
				{
					"name": "variable.register.nasm",
					"match": "\\b(rax|rbx|rcx|rdx|rsi|rdi|rsp|rbp|r8|r9|r10|r11|r12|r13|r14|r15|eax|ebx|ecx|edx|esi|edi|esp|ebp|ax|bx|cx|dx|si|di|sp|bp|al|bl|cl|dl|ah|bh|ch|dh|spl|bpl|sil|dil|r8d|r9d|r10d|r11d|r12d|r13d|r14d|r15d|r8w|r9w|r10w|r11w|r12w|r13w|r14w|r15w|r8b|r9b|r10b|r11b|r12b|r13b|r14b|r15b)\\b"
				}
			]
		},
		"conditions": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.nasm",
					"match": "[-+*/%<>$]"

				}
			]
		},
		"labels": {
			"name": "entity.name.section.nasm",
			"match": "\\.?(\\w+:|data|text|bss|rodata|data|_start|reloc|code|\\w)"
		}
	},
	"scopeName": "source.nasm"
}